<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<customView name="coinops" displayName="${viewchoicecoinops}" inherits="gamecarousel">
		<image ifSubset="favoris:coeur" name="favorite" extra="true">
			<visible>{game:favorite}</visible>
			<pos ifHelpPrompts="false">0.021 0.95</pos>
			<pos ifHelpPrompts="true">0.021 0.93</pos>
			<path>${themePath}/_viewgameoption/gl-coinopsnext/favoris/yesfull.png</path>
			<zIndex>999</zIndex>
			<maxSize>0.06 0.06</maxSize>
			<origin>0.5 0.5</origin>
			<storyboard repeat="forever">
				<animation property="opacity" from="0" to="0.7" begin="0" duration="" mode="easeOut" autoreverse="" repeat=""/>
				<animation property="scale" to="1.8" begin="200" duration="150" mode="easeIn" autoreverse="true" repeat="3"/>
				<animation property="scale" from="1" to="1" begin="350" duration="1000" mode="easeIn" autoreverse="true" repeat=""/>
			</storyboard>
		</image>
	</customView>
</theme>
