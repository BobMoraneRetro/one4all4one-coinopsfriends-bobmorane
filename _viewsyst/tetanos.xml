<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<view name="system">
		<carousel name="systemcarousel">
			<type>horizontal</type>
			<color>00000000</color>
			<colorEnd>00000000</colorEnd>
			<systemInfoDelay>700</systemInfoDelay>
			<systemInfoCountOnly>false</systemInfoCountOnly>
			<pos>0.26 0.575</pos>
			<size>1.15 1</size>
			<zIndex>900</zIndex>
			<logoSize>0.15 0.15</logoSize>
			<logoScale>2.5</logoScale>
			<transitionSpeed>450</transitionSpeed>
			<minLogoOpacity>1</minLogoOpacity>
			<maxLogoCount>6</maxLogoCount>
			<defaultTransition>instant</defaultTransition>
			<logoPos>0 0.2</logoPos>
			<itemTemplate>
				<container>
					<image name="logocustshadow">
						<pos>0.5 0.6</pos>
						<origin>0.5 0</origin>
						<maxSize>1 0.5</maxSize>
						<path>firstfile(
                    "${bobmediapath}/_systemmedia/_logosyst/clearlogos/lang-${lang}/" + {system:theme} + "-${lang}.png",
					"${bobmediapath}/_systemmedia/_logosyst/clearlogos/region-${region}/" + {system:theme} + "-${region}.png",
					"${bobmediapath}/_systemmedia/_logosyst/clearlogos/" + {system:theme} + ".png")</path>
						<padding>3 3 -3 -3</padding>
						<color>000000</color>
						<storyboard event="activate">
							<animation property="origin" to="0.5 1" begin="" duration="1050" mode="easeOut"/>
							<animation property="opacity" to="0" begin="0" duration="0" mode="easeIn"/>
							<animation property="scale" to="0" begin="0" duration="0" mode="easeIn"/>
						</storyboard>
						<storyboard event="deactivate">
							<animation property="origin" to="0.5 0" begin="" duration="350" mode="easeOut"/>
							<animation property="opacity" from="0" to="1" begin="50" duration="150" mode="easeIn"/>
							<animation property="scale" to="0.4" begin="0" duration="150" mode="easeIn"/>
						</storyboard>
						<storyboard event="scroll">
							<animation property="origin" to="0.5 0" begin="" duration="350" mode="easeOut"/>
							<animation property="opacity" to="1" begin="0" duration="0" mode="easeOut"/>
							<animation property="scale" to="0.4" begin="0" duration="0" mode="linear"/>
						</storyboard>
					</image>
					<image name="logocust">
						<pos>0.5 0.6</pos>
						<origin>0.5 0</origin>
						<maxSize>1 0.5</maxSize>
						<path>firstfile(
                    "${bobmediapath}/_systemmedia/_logosyst/clearlogos/lang-${lang}/" + {system:theme} + "-${lang}.png",
					"${bobmediapath}/_systemmedia/_logosyst/clearlogos/region-${region}/" + {system:theme} + "-${region}.png",
					"${bobmediapath}/_systemmedia/_logosyst/clearlogos/" + {system:theme} + ".png")</path>
						<storyboard event="activate">
							<animation property="origin" to="0.5 1" begin="" duration="1050" mode="easeOut"/>
							<animation property="opacity" to="0" begin="0" duration="0" mode="easeIn"/>
							<animation property="scale" to="0" begin="0" duration="0" mode="easeIn"/>
						</storyboard>
						<storyboard event="deactivate">
							<animation property="origin" to="0.5 0" begin="" duration="350" mode="easeOut"/>
							<animation property="opacity" from="0" to="1" begin="50" duration="150" mode="easeIn"/>
							<animation property="scale" to="0.4" begin="0" duration="150" mode="easeIn"/>
						</storyboard>
						<storyboard event="scroll">
							<animation property="origin" to="0.5 0" begin="" duration="350" mode="easeOut"/>
							<animation property="opacity" to="1" begin="0" duration="0" mode="easeOut"/>
							<animation property="scale" to="0.4" begin="0" duration="0" mode="linear"/>
						</storyboard>
					</image>
				</container>
			</itemTemplate>
		</carousel>
		<image name="background" extra="static">
			<path>${themePath}/_viewsyst/tetanos/vignette.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<zIndex>700</zIndex>
		</image>
		<image name="Background50" extra="static">
			<path>${themePath}/_viewsyst/tetanos/vignette3.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<zIndex>700</zIndex>
		</image>
		<image name="background28" extra="static">
			<path>${themePath}/_viewsyst/tetanos/overlay1.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<opacity>0.5</opacity>
			<zIndex>800</zIndex>
		</image>
		<text name="systemInfo">
			<visible>true</visible>
			<alignment>left</alignment>
			<pos>0.19 0.819</pos>
			<size>1 0.25</size>
			<backgroundColor>00000000</backgroundColor>
			<color>000000</color>
			<fontPath>${themePath}/_common/fonts/Digital-Serial-Bold-folder.ttf</fontPath>
			<fontSize>0.024</fontSize>
			<scaleOrigin>0.025 0.5</scaleOrigin>
			<zIndex>801</zIndex>
		</text>
		<image name="marmarqshadow" extra="true">
			<autoFade>false</autoFade>
			<pos>0.22 0.9</pos>
			<origin>0.5 1</origin>
			<padding>3 3 -3 -3</padding>
			<maxSize>0.3 0.15</maxSize>
			<color>000000</color>
			<path>firstfile(
                    "${bobmediapath}/_systemmedia/_logosyst/clearlogos/lang-${lang}/" + {system:theme} + "-${lang}.png",
					"${bobmediapath}/_systemmedia/_logosyst/clearlogos/region-${region}/" + {system:theme} + "-${region}.png",
					"${bobmediapath}/_systemmedia/_logosyst/clearlogos/" + {system:theme} + ".png")</path>
			<zIndex>900</zIndex>
			<opacity>1</opacity>
			<storyboard>
				<animation property="scale" from="0.7" to="1" begin="" autoreverse="false" duration="150" mode="easyOut"/>
			</storyboard>
		</image>
		<image name="marmarq" extra="true">
			<autoFade>false</autoFade>
			<pos>0.22 0.9</pos>
			<origin>0.5 1</origin>
			<maxSize>0.3 0.15</maxSize>
			<linearSmooth>true</linearSmooth>
			<path>firstfile(
                    "${bobmediapath}/_systemmedia/_logosyst/clearlogos/lang-${lang}/" + {system:theme} + "-${lang}.png",
					"${bobmediapath}/_systemmedia/_logosyst/clearlogos/region-${region}/" + {system:theme} + "-${region}.png",
					"${bobmediapath}/_systemmedia/_logosyst/clearlogos/" + {system:theme} + ".png")</path>
			<zIndex>901</zIndex>
			<opacity>1</opacity>
			<storyboard>
				<animation property="scale" from="0.7" to="1" begin="" autoreverse="false" duration="150" mode="easyOut"/>
			</storyboard>
		</image>
	</view>
</theme>
