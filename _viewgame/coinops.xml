<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<customView name="coinops" displayName="${viewchoicecoinops}" inherits="gamecarousel">
		<control name="fanart_extra,screenshot_extra,video_extra">
			<visible>false</visible>
		</control>
		<gamecarousel name="gamecarousel">
			<!-- <linearSmooth>true</linearSmooth> -->
			<zIndex>43</zIndex>
			<type>vertical_wheel</type>
			<pos>0.475 0</pos>
			<size>0.8 1</size>
			<logoScale>1.2</logoScale>
			<logoSize>0.150 0.260</logoSize>
			<color>00000000</color>
			<maxLogoCount>10</maxLogoCount>
			<logoRotation>-5.5</logoRotation>
			<logoRotationOrigin>6 0.5</logoRotationOrigin>
			<logoAlignment>center</logoAlignment>
			<imageSource>marquee</imageSource>
			<defaultTransition>instant</defaultTransition>
		</gamecarousel>
		<image name="overlaybase" extra="true">
			<path ifSubset="gloverlay:overdiam">${themePath}/_viewgame/coinops/overlay/overlaydiamonds.png</path>
			<path ifSubset="gloverlay:overatar|overatar2">${themepath}/_viewgame/coinops/overlay/overlay.png</path>
			<visible ifSubset="gloverlay:off">false</visible>
			<size>1 1</size>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<zIndex>20</zIndex>
			<opacity ifSubset="gloverlay:overatar2">1</opacity>
			<opacity ifSubset="gloverlay:overatar">0.7</opacity>
		</image>
		<image name="overlaymore" ifSubset="gloverlay:overatar2" extra="true">
			<path>${themePath}/_viewgame/coinops/overlay/vignette.png</path>
			<size>1 1</size>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<zIndex>50</zIndex>
		</image>
		<image name="fondecranmarquee" extra="true">
			<path>${themePath}/_viewgame/coinops/overlay/fiber.png</path>
			<size>0.44 0.36</size>
			<pos>0.245 0.1</pos>
			<origin>0.5 0.5</origin>
			<color>000000</color>
			<zIndex>3</zIndex>
			<opacity>1</opacity>
			<roundCorners>0.05</roundCorners>
		</image>
		<image name="fondecranpreview" extra="true">
			<path>${themePath}/_viewgame/coinops/overlay/fiber.png</path>
			<size>0.395 0.52</size>
			<pos>0.241 0.54</pos>
			<origin>0.5 0.5</origin>
			<color>000000</color>
			<zIndex>4</zIndex>
			<opacity>1</opacity>
			<roundCorners>0.05</roundCorners>
		</image>
		<image name="honeyback" extra="true">
			<path>${themePath}/_viewgame/coinops/overlay/honey.png</path>
			<size>0.395 0.52</size>
			<pos>0.241 0.54</pos>
			<origin>0.5 0.5</origin>
			<zIndex>4</zIndex>
			<opacity>1</opacity>
			<roundCorners>0.05</roundCorners>
		</image>
		<rating name="md_rating">
			<visible>false</visible>
		</rating>
		<image name="gamecarouselLogo">
			<linearSmooth>true</linearSmooth>
			<!-- <storyboard event="activate"> -->
				<!-- <animation property="saturation" to="1" begin="" duration="150" mode="Linear"/> -->
			<!-- </storyboard> -->
			<!-- <storyboard event="scroll"> -->
				<!-- <animation property="saturation" to="0" begin="" duration="0" mode="Linear"/> -->
			<!-- </storyboard> -->
			<!-- <storyboard event="deactivate"> -->
				<!-- <animation property="saturation" to="0" begin="" duration="150" mode="Linear"/> -->
			<!-- </storyboard> -->
		</image>
		<text name="gamecarouselLogoText">
			<color>FFFFFFFF</color>
			<glowColor>000000FF</glowColor>
			<glowSize>3</glowSize>
			<lineSpacing>1.0</lineSpacing>
			<fontSize>0.025</fontSize>
		</text>
	</customView>
</theme>
